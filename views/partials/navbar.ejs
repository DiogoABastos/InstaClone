<div class="navbar">
  <div class="container">
    <div class="logo">
      <h5><i class="fas fa-camera-retro"></i> <span>|</span> Insta<span>Clone</span></h5>
      <form action="#" class="form-inline search-form">
        <div class="form-group">
          <input type="text" placeholder="Search" class="form-control">
          <i class="fas fa-search search"></i>
        </div>
      </form>
    </div>
    <div class="options">
      <ul>
        <li><a href="/posts/new" class="btn btn-warning new-post"><i class="fas fa-plus"></i> Create New Post</a></li>
        <li> <a href="/posts"><i class="fas fa-camera-retro"></i></a></li>
        <% if (currentUser) { %>
          <li class="notifications-li">
            <a href="#" class="notification-bell"><i class="far fa-bell"></i></a><span class="notifications-number">0</span>
            <div class="notifications">
              <div>
                <p>Notifications number one</p>
              </div>
              <hr>
              <div>
                <p>Notifications number two</p>
              </div>
            </div>
          </li>
        <% } %>
        <li> <a href="/users"><i class="fas fa-user-plus"></i></a></li>
        <li> <a href="#"><i class="far fa-comments"></i></a></li>
        <% if (currentUser) { %>
          <li> <a href="/users/<%= currentUser._id %>/profile" data-id="<%= currentUser._id %>" class="profile-btn"><i class="far fa-user"></i></a></li>
        <% } else { %>
          <li> <a href="/auth/login"><i class="fas fa-sign-in-alt"></i></a></li>
        <% } %>
      </ul>
    </div>
  </div>
</div>
