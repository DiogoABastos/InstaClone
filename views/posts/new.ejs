<div class="row">
  <div class="col col-3"></div>
  <div class="col col-6">
    <div class="card margin">
      <div class="card-body middle">
        <h3>Create a new post</h3>
        <%- include('../partials/messages') %>
        <div class="post">
          <div class="info">
            <img src="/imgs/placeholder.jpeg" alt="profile-picture" class="card-photo">
            <p><%= currentUser.nickname %></p>
            <i class="fas fa-check-circle verified"></i>
          </div>
          <div class="body">
            <form action="/posts" method="POST">
              <div class="form-group">
                <textarea name="body" id="body" cols="20" rows="8" class="form-control lower-font none-resize"></textarea>
              </div>
          </div>
          <div class="action">
            <div class="first">
              <i class="far fa-heart"></i>
              <i class="far fa-comment"></i>
              <i class="far fa-paper-plane"></i>
            </div>
            <button type="submit" class="btn btn-primary lower-font"><i class="fas fa-plus"></i> Create</button>
            </form>
            <div class="second">
              <i class="far fa-bookmark"></i>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="col col-3"></div>
</div>
