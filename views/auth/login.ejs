<div class="row">
  <div class="col col-6 login-form-flex">
    <i class="fas fa-camera-retro big-logo"></i>
    <h1 class="logo">Insta<span>Clone</span></h1>
  </div>
  <div class="col col-6 login-form-flex">
    <div class="card margin">
      <div class="card-body middle">
        <h1 class="logo">Insta<span>Clone</span></h1>
        <h3 class="page">Login</h3>
        <div>
          <%- include('../partials/messages') %>
        </div>
        <form action="/auth/login" method="POST">
          <div class="form-group">
            <input type="email" name="email" id="email" class="form-control lower-font" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" name="password" id="password" class="form-control lower-font" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-primary lower-font">Login</button>
        </form>
      </div>
    </div>
    <div class="card margin">
      <div class="card-body middle">
        <p class="change">Don't have an Account? <strong><a href="/auth/register">Sign Up</a></strong></p>
      </div>
    </div>
  </div>
</div>
